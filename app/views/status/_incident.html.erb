<div id="<%= dom_id(incident) %>" class="bg-white rounded-lg shadow p-6 mb-4">
  <div class="flex items-center justify-between mb-2">
    <h3 class="text-sm font-semibold text-gray-900"><%= incident.title %></h3>
    <div class="flex space-x-2">
      <%= severity_badge(incident.severity) %>
      <%= incident_status_badge(incident.status) %>
    </div>
  </div>
  <p class="text-xs text-gray-500">
    Started <%= time_ago_in_words(incident.created_at) %> ago
    <% if incident.site_monitors.any? %>
      &middot; Affecting: <%= incident.site_monitors.pluck(:name).join(", ") %>
    <% end %>
  </p>
  <% if incident.incident_updates.any? %>
    <div class="mt-3 border-t border-gray-100 pt-3">
      <% incident.incident_updates.limit(3).each do |update| %>
        <div class="mt-2 first:mt-0">
          <p class="text-xs text-gray-500">
            <span class="font-medium"><%= update.status.titleize %></span>
            &middot; <%= time_ago_in_words(update.created_at) %> ago
          </p>
          <p class="text-sm text-gray-700"><%= update.message %></p>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
