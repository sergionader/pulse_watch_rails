<%= form_with(model: [:admin, incident], class: "space-y-6") do |f| %>
  <% if incident.errors.any? %>
    <div class="bg-red-50 border border-red-200 rounded-lg p-4">
      <h3 class="text-sm font-medium text-red-800"><%= pluralize(incident.errors.count, "error") %> prevented this incident from being saved:</h3>
      <ul class="mt-2 text-sm text-red-700 list-disc list-inside">
        <% incident.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="bg-white rounded-lg shadow p-6 space-y-4">
    <div>
      <%= f.label :title, class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :title, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 text-sm p-2 border", placeholder: "Brief description of the incident" %>
    </div>

    <div class="grid grid-cols-2 gap-4">
      <div>
        <%= f.label :severity, class: "block text-sm font-medium text-gray-700" %>
        <%= f.select :severity, Incident.severities.keys.map { |s| [s.titleize, s] }, {}, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 text-sm p-2 border" %>
      </div>

      <div>
        <%= f.label :status, class: "block text-sm font-medium text-gray-700" %>
        <%= f.select :status, Incident.statuses.keys.map { |s| [s.titleize, s] }, {}, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 text-sm p-2 border" %>
      </div>
    </div>

    <% if monitors.any? %>
      <fieldset>
        <legend class="text-sm font-medium text-gray-700">Affected Monitors</legend>
        <div class="mt-2 space-y-2">
          <% monitors.each do |monitor| %>
            <label class="flex items-center">
              <input type="checkbox"
                     name="incident[monitor_ids][]"
                     value="<%= monitor.id %>"
                     <%= "checked" if incident.site_monitors.include?(monitor) %>
                     class="h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded">
              <span class="ml-2 text-sm text-gray-700"><%= monitor.name %></span>
            </label>
          <% end %>
        </div>
      </fieldset>
    <% end %>
  </div>

  <div class="flex justify-end space-x-3">
    <%= link_to "Cancel", admin_incidents_path, class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-lg text-gray-700 bg-white hover:bg-gray-50" %>
    <%= f.submit class: "inline-flex items-center px-4 py-2 bg-indigo-600 text-white text-sm font-medium rounded-lg hover:bg-indigo-700 cursor-pointer" %>
  </div>
<% end %>
