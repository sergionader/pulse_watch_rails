<div id="<%= dom_id(monitor) %>" class="flex items-center justify-between px-6 py-4">
  <div class="flex items-center space-x-3">
    <% if monitor.up? %>
      <span class="h-2.5 w-2.5 rounded-full bg-emerald-400"></span>
    <% elsif monitor.down? %>
      <span class="h-2.5 w-2.5 rounded-full bg-rose-400"></span>
    <% else %>
      <span class="h-2.5 w-2.5 rounded-full bg-amber-400"></span>
    <% end %>
    <span class="text-sm font-medium text-gray-900 dark:text-gray-100"><%= monitor.name %></span>
  </div>
  <div class="flex items-center space-x-4">
    <% if monitor.last_checked_at %>
      <span class="text-xs text-gray-500 dark:text-gray-400 font-['IBM_Plex_Mono']">Checked <%= time_ago_in_words(monitor.last_checked_at) %> ago</span>
    <% end %>
    <%= status_badge(monitor.current_status) %>
  </div>
</div>
