<%= form_with(model: [:admin, incident, incident_update], url: admin_incident_incident_updates_path(incident), class: "space-y-4") do |f| %>
  <div>
    <%= f.label :message, class: "block text-sm font-medium text-gray-700" %>
    <%= f.text_area :message, rows: 3, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 text-sm p-2 border", placeholder: "Describe the current situation..." %>
  </div>

  <div>
    <%= f.label :status, "Update Status To", class: "block text-sm font-medium text-gray-700" %>
    <%= f.select :status, Incident.statuses.keys.map { |s| [s.titleize, s] }, { include_blank: "No change" }, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 text-sm p-2 border" %>
  </div>

  <div class="flex justify-end">
    <%= f.submit "Post Update", class: "inline-flex items-center px-4 py-2 bg-indigo-600 text-white text-sm font-medium rounded-lg hover:bg-indigo-700 cursor-pointer" %>
  </div>
<% end %>
