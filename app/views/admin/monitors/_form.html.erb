<%= form_with(model: [:admin, monitor], url: monitor.persisted? ? admin_monitor_path(monitor) : admin_monitors_path, class: "space-y-6") do |f| %>
  <% if monitor.errors.any? %>
    <div class="bg-red-50 dark:bg-rose-900/20 border border-red-200 dark:border-rose-800/50 rounded-lg p-4">
      <h3 class="text-sm font-medium text-red-800 dark:text-rose-300"><%= pluralize(monitor.errors.count, "error") %> prevented this monitor from being saved:</h3>
      <ul class="mt-2 text-sm text-red-700 dark:text-rose-300 list-disc list-inside">
        <% monitor.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="card p-6 space-y-4">
    <div>
      <%= f.label :name, class: "label-field" %>
      <%= f.text_field :name, class: "input-field", placeholder: "My Website" %>
    </div>

    <div>
      <%= f.label :url, "URL", class: "label-field" %>
      <%= f.url_field :url, class: "input-field", placeholder: "https://example.com" %>
    </div>

    <div class="grid grid-cols-2 gap-4">
      <div>
        <%= f.label :http_method, "HTTP Method", class: "label-field" %>
        <%= f.select :http_method, %w[GET POST PUT PATCH DELETE HEAD OPTIONS], {}, class: "input-field" %>
      </div>

      <div>
        <%= f.label :expected_status, "Expected Status", class: "label-field" %>
        <%= f.number_field :expected_status, class: "input-field" %>
      </div>
    </div>

    <div class="grid grid-cols-2 gap-4">
      <div>
        <%= f.label :check_interval_seconds, "Check Interval (seconds)", class: "label-field" %>
        <%= f.number_field :check_interval_seconds, min: 30, class: "input-field" %>
      </div>

      <div>
        <%= f.label :timeout_ms, "Timeout (ms)", class: "label-field" %>
        <%= f.number_field :timeout_ms, min: 1000, max: 30000, class: "input-field" %>
      </div>
    </div>

    <div class="flex items-center">
      <%= f.check_box :is_active, class: "h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 dark:border-gray-600 dark:bg-gray-800 rounded" %>
      <%= f.label :is_active, "Active", class: "ml-2 text-sm text-gray-700 dark:text-gray-300" %>
    </div>
  </div>

  <div class="flex justify-end space-x-3">
    <%= link_to "Cancel", admin_monitors_path, class: "btn-secondary" %>
    <%= f.submit class: "btn-primary cursor-pointer" %>
  </div>
<% end %>
