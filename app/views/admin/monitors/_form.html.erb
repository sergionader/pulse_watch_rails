<%= form_with(model: [:admin, monitor], url: monitor.persisted? ? admin_monitor_path(monitor) : admin_monitors_path, class: "space-y-6") do |f| %>
  <% if monitor.errors.any? %>
    <div class="bg-red-50 border border-red-200 rounded-lg p-4">
      <h3 class="text-sm font-medium text-red-800"><%= pluralize(monitor.errors.count, "error") %> prevented this monitor from being saved:</h3>
      <ul class="mt-2 text-sm text-red-700 list-disc list-inside">
        <% monitor.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="bg-white rounded-lg shadow p-6 space-y-4">
    <div>
      <%= f.label :name, class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 text-sm p-2 border", placeholder: "My Website" %>
    </div>

    <div>
      <%= f.label :url, "URL", class: "block text-sm font-medium text-gray-700" %>
      <%= f.url_field :url, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 text-sm p-2 border", placeholder: "https://example.com" %>
    </div>

    <div class="grid grid-cols-2 gap-4">
      <div>
        <%= f.label :http_method, "HTTP Method", class: "block text-sm font-medium text-gray-700" %>
        <%= f.select :http_method, %w[GET POST PUT PATCH DELETE HEAD OPTIONS], {}, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 text-sm p-2 border" %>
      </div>

      <div>
        <%= f.label :expected_status, "Expected Status", class: "block text-sm font-medium text-gray-700" %>
        <%= f.number_field :expected_status, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 text-sm p-2 border" %>
      </div>
    </div>

    <div class="grid grid-cols-2 gap-4">
      <div>
        <%= f.label :check_interval_seconds, "Check Interval (seconds)", class: "block text-sm font-medium text-gray-700" %>
        <%= f.number_field :check_interval_seconds, min: 30, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 text-sm p-2 border" %>
      </div>

      <div>
        <%= f.label :timeout_ms, "Timeout (ms)", class: "block text-sm font-medium text-gray-700" %>
        <%= f.number_field :timeout_ms, min: 1000, max: 30000, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 text-sm p-2 border" %>
      </div>
    </div>

    <div class="flex items-center">
      <%= f.check_box :is_active, class: "h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded" %>
      <%= f.label :is_active, "Active", class: "ml-2 text-sm text-gray-700" %>
    </div>
  </div>

  <div class="flex justify-end space-x-3">
    <%= link_to "Cancel", admin_monitors_path, class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-lg text-gray-700 bg-white hover:bg-gray-50" %>
    <%= f.submit class: "inline-flex items-center px-4 py-2 bg-indigo-600 text-white text-sm font-medium rounded-lg hover:bg-indigo-700 cursor-pointer" %>
  </div>
<% end %>
