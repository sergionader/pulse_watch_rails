<% flash.each do |type, message| %>
  <% css_class = case type.to_s
    when "notice", "success" then "bg-emerald-50 text-emerald-800 border-emerald-200 dark:bg-emerald-900/20 dark:text-emerald-300 dark:border-emerald-800/50"
    when "alert", "error"   then "bg-rose-50 text-rose-800 border-rose-200 dark:bg-rose-900/20 dark:text-rose-300 dark:border-rose-800/50"
    else "bg-blue-50 text-blue-800 border-blue-200 dark:bg-blue-900/20 dark:text-blue-300 dark:border-blue-800/50"
    end %>
  <div class="border-b <%= css_class %>" data-controller="flash">
    <div class="container mx-auto px-4 py-3 flex justify-between items-center">
      <p class="text-sm font-medium"><%= message %></p>
      <button type="button" data-action="flash#dismiss" class="text-current opacity-50 hover:opacity-100 transition-opacity">
        <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
    </div>
  </div>
<% end %>
