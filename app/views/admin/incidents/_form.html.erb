<%= form_with(model: [:admin, incident], class: "space-y-6") do |f| %>
  <% if incident.errors.any? %>
    <div class="bg-red-50 dark:bg-rose-900/20 border border-red-200 dark:border-rose-800/50 rounded-lg p-4">
      <h3 class="text-sm font-medium text-red-800 dark:text-rose-300"><%= pluralize(incident.errors.count, "error") %> prevented this incident from being saved:</h3>
      <ul class="mt-2 text-sm text-red-700 dark:text-rose-300 list-disc list-inside">
        <% incident.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="card p-6 space-y-4">
    <div>
      <%= f.label :title, class: "label-field" %>
      <%= f.text_field :title, class: "input-field", placeholder: "Brief description of the incident" %>
    </div>

    <div class="grid grid-cols-2 gap-4">
      <div>
        <%= f.label :severity, class: "label-field" %>
        <%= f.select :severity, Incident.severities.keys.map { |s| [s.titleize, s] }, {}, class: "input-field" %>
      </div>

      <div>
        <%= f.label :status, class: "label-field" %>
        <%= f.select :status, Incident.statuses.keys.map { |s| [s.titleize, s] }, {}, class: "input-field" %>
      </div>
    </div>

    <% if monitors.any? %>
      <fieldset>
        <legend class="text-sm font-medium text-gray-700 dark:text-gray-300">Affected Monitors</legend>
        <div class="mt-2 space-y-2">
          <% monitors.each do |monitor| %>
            <label class="flex items-center">
              <input type="checkbox"
                     name="incident[monitor_ids][]"
                     value="<%= monitor.id %>"
                     <%= "checked" if incident.site_monitors.include?(monitor) %>
                     class="h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 dark:border-gray-600 dark:bg-gray-800 rounded">
              <span class="ml-2 text-sm text-gray-700 dark:text-gray-300"><%= monitor.name %></span>
            </label>
          <% end %>
        </div>
      </fieldset>
    <% end %>
  </div>

  <div class="flex justify-end space-x-3">
    <%= link_to "Cancel", admin_incidents_path, class: "btn-secondary" %>
    <%= f.submit class: "btn-primary cursor-pointer" %>
  </div>
<% end %>
